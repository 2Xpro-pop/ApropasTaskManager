<ResourceDictionary 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ApoposTaskManager.Client.Views">

    <x:Single x:Key="ValidatableEntryBorderRadius">15</x:Single>

    <Style x:Key="InValidEntryFrame" TargetType="Frame">
        <Setter Property="BorderColor" Value="Red"/>
    </Style>

    <Style x:Key="ValidEntryFrame" TargetType="Frame">
        <Setter Property="BorderColor" Value="{DynamicResource Primary}"/>
    </Style>
    
    
</ResourceDictionary>